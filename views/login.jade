extends layout

block content
  .container(id="page")

    div.span4(id="loginjade")
      form.form-horizontal
        div.control-group
          label.control-label(for='inputUsername') Username
          div.controls
            input.input-small(type="text",id="inputUsername", placeholder="username")
        div.control-group
          label.control-label(for='inputPassword') Password
          div.controls
            input.input-small(type="password", id='inputPassword', placeholder="password")
        
        div.control-group
          div.controls
            a.btn.btn-primary(id='login') Login
